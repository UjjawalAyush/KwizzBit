<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/holo_green_light"
    android:paddingBottom="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/txtTrip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle4"
        android:layout_alignStart="@+id/txtTitle4"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:text="dd/mmm/year hh:mm:ss"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/reciever_layout"
        android:text="dd/mmm/year hh:mm:ss"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txtFriend4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle4"
        android:layout_alignStart="@+id/txtTitle4"
        android:layout_marginStart="14dp"
        android:layout_marginTop="60dp"
        android:text="By;gvcab"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp" />

</RelativeLayout>
